generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// admin
model User {
  id       String  @id @default(cuid())
  username String?
  password String?
}

enum Gender {
  male
  female
}

// toddler
model Toddler {
  id     String @id @default(cuid())
  uid    String @unique
  name   String
  gender Gender

  Status Status[]
}

enum StatusStunting {
  normal
  severely_stunted
  stunted
  tinggi
}

model Status {
  id             String         @id @default(cuid())
  toddlerId      String
  status         StatusStunting
  height         Float
  age            Int
  recommendation String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  // Relations
  toddler Toddler @relation(fields: [toddlerId], references: [uid])
}
